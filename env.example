# Virtual Receptionist Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# GMAIL CONFIGURATION (Required for OTP and notifications)
# =============================================================================
GMAIL_USER=yourcompanyemail@gmail.com
GMAIL_APP_PASSWORD=your_app_specific_password

# =============================================================================
# FACE RECOGNITION CONFIGURATION
# =============================================================================
# Path to face embeddings file (created by enroll_faces.py)
VR_FACE_EMBEDDINGS=face_embeddings.pkl

# Auto-start face recognition on bot startup (1=yes, 0=no)
AUTO_FACE_GREETING=1

# Camera device index (0=default camera, 1=second camera, etc.)
VR_CAMERA_INDEX=0

# Bypass wake word for testing (1=bypass, 0=require wake word)
BYPASS_WAKEWORD=0

# =============================================================================
# DATA FILE PATHS (Optional - defaults provided)
# =============================================================================
# Employee database CSV
VR_EMPLOYEE_CSV=data/employee_details.csv

# Candidate interview CSV
VR_CANDIDATE_CSV=data/candidate_interview.csv

# Company information PDF
VR_COMPANY_INFO_PDF=data/company_info.pdf

# Visitor log CSV (auto-generated)
VR_VISITOR_LOG=data/visitor_log.csv

# Manager visit CSV
VR_MANAGER_VISIT_CSV=data/manager_visit.csv

# =============================================================================
# OPTIONAL: TWILIO SMS SUPPORT
# =============================================================================
# Uncomment and fill if you want SMS notifications
# TWILIO_SID=your_twilio_sid
# TWILIO_AUTH=your_twilio_auth_token
# TWILIO_FROM=+1234567890

# =============================================================================
# OPTIONAL: TAVUS AVATAR SUPPORT
# =============================================================================
# Uncomment and fill if you want to use Tavus avatar
# TAVUS_API_KEY=your_tavus_api_key
# REPLICA_ID=your_replica_id
# PERSONA_ID=your_persona_id
